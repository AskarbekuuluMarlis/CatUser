<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/corner_create_button"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/logo"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meow messanger классный"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:gravity="center"
            android:background="@drawable/logo_settings"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginStart="201dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_change_language"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/logo_language"
            android:layout_marginHorizontal="14dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_change_light"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:gravity="center"
            android:background="@drawable/logo_light"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_exit"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/logo_exit"
            android:layout_marginHorizontal="14dp"
            />

    </LinearLayout>

</LinearLayout>
