<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="80dp"
        android:orientation="vertical"
        android:layout_gravity="center">
    
    <TextView
        android:layout_gravity="center|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="user настройки"/>

        <TextView
            android:layout_gravity="center|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:text="настройки пользователя"/>

        <TextView
            android:layout_gravity="center|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="описание"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/corner_button"
            android:hint="до 20 символов"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_create_button"
            android:text="сохранить"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_gravity="center|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:text="настройки приложения"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_create_button"
            android:text="включить уведомления"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back_from_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_create_button"
            android:text="назад"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>

